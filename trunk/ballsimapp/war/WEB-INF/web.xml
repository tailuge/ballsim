<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
  <servlet-name>gWTGameServerImpl</servlet-name>
  <servlet-class>org.motion.ballsimapp.server.GWTGameServerImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>gWTGameServerImpl</servlet-name>
  <url-pattern>/ballsimapp/gameServer</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Ballsimapp.html</welcome-file>
  </welcome-file-list>

</web-app>
